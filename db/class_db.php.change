	{
    $this->EnVision->fuctions_entered++;
		if (!is_numeric($port)) {
			$this->EnVision->fuctions_left++;
			return;
		}
		elseif ($port > 0 && $port < 65536)
		{
			$this->dbPort = $port;
		}
		else {
			$this->EnVision->fuctions_left++;
			return;
		}
	}
